generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户角色
enum Role {
  user
  admin
}

model User {
  id        Int      @id @default(autoincrement())
  telephone String   @unique
  password  String
  roles     Role[]   @default([user])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

